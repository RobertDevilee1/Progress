    <div class="row">
        {% for trophy in trophies %}
            <div class="col-md-4">
                <div class="card mb-3">
                    {% if trophy.image %}
                        <img src="{{ asset(trophy.image) }}" class="card-img-top w-50 h-50 " alt="{{ trophy.name }}">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ trophy.name }}</h5>
                        <p class="card-text">{{ trophy.description }}</p>
                        <p class="card-text"><small>Behaald op {{ trophy.trainingSession.date|date('Y-m-d') }}</small></p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
